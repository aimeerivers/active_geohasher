%h2 Your profile

-form_for(@user, :url => profile_path, :html => {:method => :put}) do |f|
  =f.error_messages :header_message => nil
    
  %p
    =label_tag 'identifying url'
    %br/
    =h @user.identifier
    
  %p
    =f.label :name
    %br/
    =f.text_field :name
    
  %p
    =f.label :email
    %br/
    =f.text_field :email
    
  %p
    =f.label :receive_email
    %br/
    =f.check_box :receive_email
    
  %p
    =f.label :distance_units, 'Measure distances in'
    %br/
    =f.select(:distance_units, User::DISTANCE_UNITS.map{|unit| [I18n.t(unit), unit]})

  %p
    =f.submit 'Update profile'

