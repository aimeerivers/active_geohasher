%h2 Your profile

-form_for(@user, :url => profile_path, :html => {:method => :put}) do |f|
  =f.error_messages :header_message => nil
    
  %p
    =label_tag 'identifying url'
    %br/
    =h @user.identifier
    
  %p
    =f.label :name
    %br/
    =f.text_field :name
    
  %p
    =f.label :email
    %br/
    =f.text_field :email
    
  %p
    =f.label :receive_email, "Receive emails"
    %br/
    =f.check_box :receive_email
    
  %p
    =label_tag "preferred_links", "Links you want in your emails"
    %br/
    =select_tag("preferred_links", options_for_select(User::AVAILABLE_LINKS.map{|link| [I18n.t(link), link]}, :selected => current_user.preferred_links.split(',')), :multiple => true)
    %br/
    Use Ctrl or Cmd to select multiple links.

  %p
    =f.label :preferred_distance_units, 'Measure distances in'
    %br/
    =f.select(:preferred_distance_units, User::DISTANCE_UNITS.map{|unit| [I18n.t(unit), unit]})

  %p
    =f.submit 'Update profile'
    or
    = link_to('Cancel', subscribe_path)

