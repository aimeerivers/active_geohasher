- if logged_in?
  %p
    = t('authentication.welcome', :name => link_to(current_user.name, edit_profile_path))
    = link_to t('authentication.sign_out'), signout_path
- else
  = link_to image_tag('sign_in.png', :alt => t('authentication.sign_in_with', :sign_in => t('authentication.sign_in')), :title => t('authentication.sign_in_with', :sign_in => t('authentication.sign_in')), :size => '300x50', :class => 'sign_in_button'), "https://#{ENV['RPX_REALM']}.rpxnow.com/openid/v2/signin?token_url=#{rpx_url}", :class => 'rpxnow', :onclick => 'return false;'
    
  -content_for :post_page_load_javascript do
    %script{ :src => "https://rpxnow.com/openid/v2/widget", :type => "text/javascript" }
    :javascript
      RPXNOW.token_url = '<%= rpx_url %>';
      RPXNOW.realm = '<%= ENV['RPX_REALM'] %>';
      RPXNOW.overlay = false;

