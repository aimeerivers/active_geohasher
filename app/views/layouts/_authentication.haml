- if logged_in?
  %p
    = "Hey #{current_user.name}!"
    = link_to 'Sign out', signout_path
- else
  %p
    = link_to 'Sign in', "https://#{ENV['RPX_REALM']}.rpxnow.com/openid/v2/signin?token_url=#{rpx_url}", :class => 'rpxnow', :onclick => 'return false;'
    
  %script{ :src => "https://rpxnow.com/openid/v2/widget", :type => "text/javascript" }
  :javascript
    RPXNOW.token_url = '<%= rpx_url %>';
    RPXNOW.realm = '<%= ENV['RPX_REALM'] %>';
    RPXNOW.overlay = false;
 
