%h2= t('home.welcome_to_active_geohasher')
%h3= t('home.resources_for_geohashers')

%ul
  %li= t('home.features.subscribe_to_graticules')
  %li= t('home.features.receive_free_daily_geohashing_email')
  %li= t('home.features.see_distance_from_home_location')
  %li= t('home.features.with_useful_links')
  %li= t('home.features.google_earth_feeds')
  %li
    = t('home.features.open_source')
    %a{:href => 'http://github.com/sermoa/active_geohasher'}= t('home.features.contributions_welcome')

- unless logged_in?
  %h2 Sign in
  %p
    = sign_in_link
    using your Google account, Yahoo, Flickr, Twitter, Facebook, or OpenID.
  
%h2 Latest on twitter
%div#twtr-profile-widget

%br/

-content_for(:page_specific_stylesheets) do
  %link{:href => "http://widgets.twimg.com/j/1/widget.css", :type => "text/css", :rel => "stylesheet"}

-content_for :post_page_load_javascript do
  %script{:src => "http://widgets.twimg.com/j/1/widget.js", :type => "text/javascript"}
  :javascript
    new TWTR.Widget({
      profile: true,
      id: 'twtr-profile-widget',
      loop: true,
      width: 800,
      height: 200,
      theme: {
        shell: { background: '#eeeeee', color: '#888888' },
        tweets: { background: '#ffffff', color: '#444444', links: '#111111' }
      }
    }).render().setProfile('activegeohasher').start();

